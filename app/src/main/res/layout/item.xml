<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="data"
            type="com.example.acromineapp.model.LongFormObject" />
    </data>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        android:clickable="true"
        android:focusable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/longForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/long_form"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Long Form" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:maxLines="5"
                android:ellipsize="end"
                android:id="@+id/name_id"
                tools:text="Long Namesfgsfgsdfgsdfgsdfgsdfgsdfgsdfgsdfgsdfgsfgsdfgadfadfadfadfadfadfasdfasdasdfadfasdfadfasdfadfadfadsfadfadsfasdfadsfads"
                app:layout_constraintLeft_toLeftOf="@+id/longForm"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@+id/longForm"
                app:layout_constraintTop_toTopOf="parent"

                />

            <TextView
                android:id="@+id/frequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/frequency"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name_id"
                tools:text="Frequency" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:id="@+id/frequency_id"
                tools:text="Frequency"
                app:layout_constraintTop_toBottomOf="@+id/name_id"
                app:layout_constraintStart_toEndOf="@+id/frequency"
                />

            <TextView
                android:id="@+id/since"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/since"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frequency"
                tools:text="Since" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:id="@+id/since_id"
                tools:text="Frequency"
                app:layout_constraintTop_toBottomOf="@+id/frequency_id"
                app:layout_constraintStart_toEndOf="@+id/since"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>
    </HorizontalScrollView>

</layout>